@{
  Layout = "_Layout";
}
@model List<BackAlleyClinic.Models.Doctor>;

<h1>Welcome to the Back Alley Clinic</h1>
@if (@Model.Count == 0)
{
  <h3>Please add a Doctor to the Registry</h3>
  <p>@Html.ActionLink("Add new Doctor", "Create", "Doctors")</p>
}
else
{
  <p>@Html.ActionLink("See all Doctors", "Index", "Doctors")</p>
  <p>@Html.ActionLink("See all Patients", "Index", "Patients")</p>
}